<link href = "/CSS/feedback.css" rel= "stylesheet" type = "text/css" >

<title>Create a Feedback</title>

<div id="user_section">
	
		
		{{#if isLoggedIn}}
			<p class="createTitle">CREATE A FEEDBACK</p>
			<form action="/feedbacks/newFeedback" method="POST" enctype="multipart/form-data">
			{{#if errors.length}}
				{{#each errors}}
					<p class="creatingError">{{this}}</p>
				{{/each}}
			{{/if}}
				<div>
					<input class="createAnime" type="text" name="anime" placeholder="Anime Name">
				</div>
				<div>
					<textarea class="createContent" type="text" name="content" rows="4" cols="60" placeholder="I Really Love This Anime" style="resize: none;"></textarea>
				</div>
				<div>
					<input class="createGenre" type="text" name="genre" placeholder="Action, Romance, Etc ">
				</div>
				<div>
					<input class="createRate" type="number" max="10" name="rate" placeholder="1-10">/10‚≠ê
				</div>
				<input type="file" name="imageUpload">
				
				<div id="submit_update">
					<input class="submitFeedback" type="submit" name="create-btn" value="Post">
				</div>	
			</form>
			{{else}}
				<p class="notLoggedIn">You Need To Be Logged In To Post A Feedback.</p>
		{{/if}}

</div>